class Solution:
    def climbStairs(self, n: int) -> int:
        if n == 1:
            return 1
        if n == 2:
            return 2

        # Start with base cases
        first, second = 1, 2

        # Build up from step 3 to n
        for i in range(3, n + 1):
            third = first + second
            first = second
            second = third

        return second
